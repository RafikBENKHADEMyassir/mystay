# Backend API
PORT=4000
HOST=127.0.0.1

# Postgres connection string
# Default local dev: user `postgres`, password `postgres`, db `mystay`
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mystay

# Comma-separated list of allowed browser origins for local development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Auth (dev)
# Used to sign guest + staff tokens.
AUTH_SECRET=dev-secret-change-me

# PMS Integration (choose one provider)
PMS_PROVIDER=mock
# PMS_PROVIDER=opera
# PMS_PROVIDER=mews
# PMS_PROVIDER=cloudbeds

# Opera Cloud Configuration
PMS_BASE_URL=https://opera.example.com/ows
PMS_RESORT_ID=RESORT_CODE
PMS_USERNAME=API_USERNAME
PMS_PASSWORD=API_PASSWORD

# Mews Configuration
# PMS_BASE_URL=https://api.mews.com
# PMS_CLIENT_TOKEN=your_mews_client_token
# PMS_ACCESS_TOKEN=your_mews_access_token
# PMS_ENTERPRISE_ID=your_enterprise_id

# Cloudbeds Configuration
# PMS_BASE_URL=https://api.cloudbeds.com
# PMS_CLIENT_ID=your_cloudbeds_client_id
# PMS_CLIENT_SECRET=your_cloudbeds_client_secret
# PMS_PROPERTY_ID=your_property_id

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Digital Key Integration (choose provider)
DIGITAL_KEY_PROVIDER=none
# DIGITAL_KEY_PROVIDER=alliants
# DIGITAL_KEY_PROVIDER=openkey

# Alliants Digital Key Configuration
DIGITAL_KEY_BASE_URL=https://digitalkey.example.com
DIGITAL_KEY_PROPERTY_ID=ALLIANTS_PROPERTY_ID
DIGITAL_KEY_API_KEY=ALLIANTS_API_KEY

# OpenKey Configuration
# DIGITAL_KEY_BASE_URL=https://api.openkey.co
# DIGITAL_KEY_CLIENT_ID=OPENKEY_CLIENT_ID
# DIGITAL_KEY_CLIENT_SECRET=OPENKEY_CLIENT_SECRET
# DIGITAL_KEY_PROPERTY_ID=OPENKEY_PROPERTY_ID

# OCR Service for ID Scanning
OCR_PROVIDER=mock
# OCR_PROVIDER=aws-textract
# OCR_PROVIDER=google-vision
# OCR_PROVIDER=azure-vision

# AWS Textract
OCR_BASE_URL=https://textract.us-east-1.amazonaws.com
OCR_API_KEY=your_aws_access_key

# Google Vision API
# OCR_API_KEY=your_google_vision_api_key

# Azure Computer Vision
# OCR_BASE_URL=https://your-resource.cognitiveservices.azure.com
# OCR_API_KEY=your_azure_subscription_key

# OpenAI for AI Concierge
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# Hotel Information (for AI Concierge context)
HOTEL_NAME=MyStay Hotel
HOTEL_DESCRIPTION=A luxury boutique hotel in the heart of the city
HOTEL_LOCATION=City Center
HOTEL_AMENITIES=Restaurant,Spa,Gym,Pool,Bar,Concierge,Room Service
